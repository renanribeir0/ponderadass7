datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UsuarioEP {
  id      Int @id @default(autoincrement())
  email       String
  senha       String
  hierarquia  String
  nome        String
}

model Parceiro {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now()) //
  nomeEmpresa      String          
  mercado          String        
  senha            String          
  cnpj             String
  nomeContato      String
  cpf              String                   //
  email            String   @unique
  telefone         String
  nota             Int?                      // 
  iniciativas      Iniciativa[]
}

model Iniciativa {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt    //
  modulo    Modulo   @relation(fields: [moduloId], references: [id])
  moduloId  Int
  parceiro  Parceiro    @relation(fields: [parceiroId], references: [id])
  parceiroId Int
  problema   String
  escopo     String
  mvp        String
  tema       String
  turma      Turma?      @relation(fields: [turmaId], references: [id])
  turmaId    Int?
}

model Modulo {
    id          Int     @id @default(autoincrement())
    nomeModulo  String
    descricao   String?
    competencias String[]
    iniciativas Iniciativa[]
}

model Turma {
    id      Int     @id @default(autoincrement())
    nomeTurma   String
    iniciativas Iniciativa[]
}